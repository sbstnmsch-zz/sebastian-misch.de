master_process off;
daemon off;

events {
}

http {
  types {
    text/cache-manifest appcache;
    text/html html;
    application/javascript js;
    text/css css;
    image/svg+xml svg;
    image/x-icon ico;
  }

  access_log /dev/stdout;
  error_log /dev/stdout;

  index index.html;

  server{
    listen 3000;

    root {{=pwd}}/dist;
    index index.html;

    server_name sebastian-misch.de *.sebastian-misch.de localhost;

    location / {
      expires 1d;
    }
  }
}
