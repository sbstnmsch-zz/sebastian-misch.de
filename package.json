{
  "name": "sebastian-misch.de",
  "version": "0.1.0",
  "description": "Personal website of Sebastian Misch",
  "main": "src/app/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "(test -d dist && rm -r dist); webpack -p",
    "test": "eslint .",
    "start": "webpack-dev-server",
    "deploy":
      "npm test && npm run deploy:prepare && npm run deploy:verification && npm run deploy:sync",
    "deploy:prepare": "cp -r src/static/* dist/",
    "deploy:verification":
      "echo \"google-site-verification: google${GOOGLE_SITE_VERIFICATION}.html\" > dist/google\"${GOOGLE_SITE_VERIFICATION}\".html",
    "deploy:sync":
      "rsync -az --exclude '.git*' --exclude '.next' --no-owner --no-group --delete -e 'ssh -o StrictHostKeyChecking=no' ./dist/ sebastian-misch.de:~sebastian-misch-de/htdocs/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sbstnmsch/sebastian-misch.de.git"
  },
  "author": "Sebastian Misch",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-eslint": "^7.2.3",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "sass-loader": "^6.0.3",
    "sftp-deploy": "^0.1.0",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.0",
    "webpack-dev-server": "^2.4.5"
  }
}
